{
  "compilerOptions": {
      "jsx": "react",
      "target": "es6",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "outDir": "./dist",
      "declaration": true,
      "declarationDir": "./dist",
      "strict": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "typeRoots": [
          "node_modules/@types"
      ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
      "dist",
      "node_modules"
  ],
  "files": [
    "./typings/react-chessground.d.ts",
    "./typings/svgs.d.ts",
  ]
}